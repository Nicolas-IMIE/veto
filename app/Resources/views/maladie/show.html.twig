{% extends 'base.html.twig' %}

{% block body %}
    <h1>Maladie</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ maladie.id }}</td>
            </tr>
            <tr>
                <th>Maid</th>
                <td>{{ maladie.maId }}</td>
            </tr>
            <tr>
                <th>Maname</th>
                <td>{{ maladie.maName }}</td>
            </tr>
            <tr>
                <th>Matraitement</th>
                <td>{% if maladie.maTraitement %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('maladie_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('maladie_edit', { 'id': maladie.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
