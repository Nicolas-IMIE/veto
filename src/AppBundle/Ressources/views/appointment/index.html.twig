{% extends 'base.html.twig' %}

{% block layout %}
    <h1>Liste des rendez-vous</h1>
    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Reference</th>
                <th>Client</th>
                <th>Iscoming</th>
                <th>Docteur</th>
                <th>Maladie</th>
                <th>Traitement</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for rendezVous in rendezVouses %}
                <tr>
                    <td><a href="{{ path('rendezvous_show', { 'id': rendezVous.id }) }}">{{ rendezVous.id }}</a></td>
                    <td>{% if rendezVous.date %}{{ rendezVous.date|date('Y-m-d') }}{% endif %}</td>
                    <td>{{ rendezVous.reference }}</td>
                    <td>{{ rendezVous.client }}</td>
                    <td>{% if rendezVous.isComing %}Yes{% else %}No{% endif %}</td>
                    <td>{{ rendezVous.docteur }}</td>
                    <td>{{ rendezVous.maladie }}</td>
                    <td>{{ rendezVous.maladie is not empty ? rendezVous.maladie.traitement }}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="...">
                            <a role="button" class="btn btn-default" href="{{ path('rendezvous_show', { 'id': rendezVous.id }) }}">show</a>
                            <a role="button" class="btn btn-default" href="{{ path('rendezvous_edit', { 'id': rendezVous.id }) }}">edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <a class="btn btn-success" href="{{ path('rendezvous_new') }}" role="button">Cr√©er nouveau rendez-vous</a>
{% endblock %}